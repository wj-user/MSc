<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompositionFees">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:navigationIcon="@drawable/ic_back"
            app:title="Home">
        </android.support.v7.widget.Toolbar>

        <ImageView
            android:id="@+id/img_fe"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Composition Fees"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="The composition fee for each 6 credit-units in MSc(CompSc) is HK$13,000*.  The dissertation, which is equivalent to 24 credits, has a composition fee of HK$52,000*.  The total composition fees are therefore as follows:"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="48 credit-units (8 courses) + dissertation:"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(HK$13,000* x 8) + (HK$52,000*) = HK$156,000*"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:singleLine="false"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Students who select to study a course from the MSc(ECom &amp; IComp) and MSc(Eng) programmes have to pay HK$13,000* and HK$12,000* respectively per 6-credit course."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="italic"
            android:text="* Subject to University approval"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Fees for enrolled courses are paid on semester basis.  The first instalment of composition fees of 12 credit-units is payable at the time of acceptance of an offer of admission."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Generally composition fees for cancelled enrolment before specified deadline are not refunded, but can be used to pay for another enrolled course or carried over to the next semester as credit. (Subject to the approval by the University)"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Financial Assitance"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="italic"
            android:text="For Hong Kong Residents"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Some of our courses have been included in the list of reimbursable courses for the Hong Kong Continuing Education Fund (CEF) which provides reimbursement up to HK$10,000 for eligible local students. More details available at: http://www.wfsfaa.gov.hk/cef/index.htm"
            />


        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="italic"
            android:text="For PRC Candidates"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="PRC students who have successfully applied and been offered a place in the Master of Science in Computer Science as full-time students in Hong Kong have an opportunity to have their composition fees reduced if they apply and are awarded The China Postgraduate Scholarships for Computer Science."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="The maximum number of scholarships for 2019-20 is thirty, with a maximum value of HK$30,000 each."/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="The scholarships shall be used to meet part of the composition fees for a full-time programme of studies leading to the degree of Master of Science in Computer Science."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="The scholarships shall be awarded mainly on the basis of academic merits."/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>