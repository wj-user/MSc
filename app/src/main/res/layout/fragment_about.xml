<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/about_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="Message From the Program Director"
        android:textSize="15dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:visibility="visible" />
    <android.support.v7.widget.CardView
        android:id="@+id/about_card1"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="460dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/about_card1_text1"
            android:layout_width="220dp"
            android:layout_height="161dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/about_card1_img"
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop" />
        
        <TextView
            android:id="@+id/about_card1_text2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text=""
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/about_card1_text3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text=""
            android:textSize="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/about_card1_text4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="345dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/about_card1_text5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text=""
            android:textSize="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#000000"
            />
    </android.support.v7.widget.CardView>




</LinearLayout>
